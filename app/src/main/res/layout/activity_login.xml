<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="407dp"
        android:layout_height="110dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:text="Sign in"
        android:textSize="48sp"

        android:translationY="-25px" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/username_text_input_layout"
        android:layout_width="783dp"
        android:layout_height="156dp"
        android:translationY="-150px"
        app:endIconMode="clear_text"
        app:errorEnabled="true">

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"

            android:layout_height="113dp"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="16dp"

            android:hint="Email"
            android:inputType="textEmailAddress"

            android:textSize="34sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_text_input_layout"
        android:layout_width="797dp"
        android:layout_height="136dp"
        android:translationY="-100px"
        app:errorEnabled="true"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/password"
            android:layout_width="756dp"
            android:layout_height="114dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="28dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="34sp" />ad

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/loginbtn"
        android:layout_width="179dp"
        android:layout_height="85dp"
        android:text="Sign in"
        android:textSize="24sp"
        android:translationX="70px"
        android:translationY="-25px" />

    <Button
        android:id="@+id/Forgot"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="301dp"

        android:layout_height="65dp"
        android:layout_gravity="right"
        android:text="Forgot Password?"

        android:textAllCaps="false"
        android:textColor="#0B0909"
        android:textSize="34sp"
        android:translationX="-70px"
        android:translationY="-150px" />

    <LinearLayout
        android:layout_width="623dp"
        android:layout_height="102dp"
        android:translationY="-100px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Don't have an anccount?"
            android:textSize="34sp" />

        <Button
            android:id="@+id/Signbtn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="148dp"
            android:layout_height="wrap_content"

            android:text="Sign up!"
            android:textAllCaps="false"

            android:textColor="#0B0909"
            android:textSize="24sp" />

    </LinearLayout>


</LinearLayout>